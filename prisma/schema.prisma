// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  avatar       String?
  password     String
  address      String?
  phonenumber  String   @unique
  refToken     String?
  //이렇게만 작성해서 삭제할때 decade? 형식으로 삭제가될까?
  cart         Bread[]  @relation("cartBreads")
  // 외부 테이블 참조
  boughtBreads Bread[]
  ownBakery    Bakery?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Bread {
  id                Int      @id @default(autoincrement())
  name              String
  price             Int
  description       String?
  detailDescription String?
  boughtUsers       User[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  bakery            Bakery   @relation(fields: [bakeryId], references: [id])
  bakeryId          Int
  // 시그니처 메뉴인지
  isSigniture       Boolean  @default(false)

  User   User? @relation("cartBreads", fields: [userId], references: [id])
  userId Int?
}

model Bakery {
  id                Int      @id @default(autoincrement())
  owner             User     @relation(fields: [ownerId], references: [id])
  ownerId           Int
  name              String
  address           String?
  description       String?
  detailDescription String?
  breads            Bread[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
