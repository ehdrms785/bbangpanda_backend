// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  avatar       String?
  password     String
  address      String?
  phonenumber  String   @unique
  refToken     String?
  // 외부 테이블 참조
  boughtBreads Bread[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Bread {
  id              Int      @id @default(autoincrement())
  name            String
  price           Int
  description     String?
  boughtUsers     User[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  bakery          Bakery   @relation(fields: [bakeryId], references: [id])
  bakeryId        Int
  signitureBakery Bakery?  @relation("signitureBreads", fields: [bakeryId], references: [id])
}

model Bakery {
  id              Int      @id @default(autoincrement())
  name            String
  address         String?
  description     String?
  breads          Bread[]
  signitureBreads Bread[]  @relation("signitureBreads")
  store           Store?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Store {
  id       Int     @id @default(autoincrement())
  bakery   Bakery? @relation(fields: [bakeryId], references: [id])
  bakeryId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
